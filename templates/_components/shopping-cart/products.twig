{# @var cart \craft\commerce\elements\Order #}
{% set cart = craft.commerce.carts.cart %}

<div>
    <section aria-labelledby="cart-heading" class="lg:col-span-7">
        <h2 id="cart-heading" class="sr-only">Items in your shopping cart</h2>
        <ul role="list" class="space-y-4">
            {% if cart.lineItems|length %}
                {% for item in cart.lineItems %}
                    <li class="flex p-4">
                        <div class="flex-shrink-0">
{#                            {% set image = item.variant.image.one() %}#}
{#                            {% if image %}#}
{#                                <img src="{{ image.url }}" alt="{{ image.title }}" class="h-24 w-24 rounded-md object-cover object-center sm:h-36 sm:w-36"/>#}
{#                            {% endif %}#}
                        </div>
                        <div class="ml-4 flex flex-1 flex-col justify-between sm:ml-6">
                            <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                                <div>
                                    <div class="flex justify-between">
                                        <h3 class="text-md">
                                            <a class="font-medium text-gray-700 hover:text-gray-800">
                                                {{ item.description }}
                                            </a>
                                        </h3>
                                    </div>
                                    <p class="mt-1 text-md font-medium text-gray-900">
                                        {{ item.price }}
                                    </p>
                                </div>

                                <div class="mt-4 sm:mt-0 sm:pr-9">
                                    <select sprig name="qty" class="form-select max-w-full rounded-md border border-gray-300 py-1.5 text-left text-base font-medium leading-5 text-gray-700 shadow-sm focus:border-sky-600 focus:outline-none focus:ring-1 focus:ring-sky-600 sm:text-md">
                                        {% if item.qty %}
                                            <option value="1" {{ item.qty == 1 ? 'selected' }}>1</option>
                                            <option value="2" {{ item.qty == 2 ? 'selected' }}>2</option>
                                            <option value="3" {{ item.qty == 3 ? 'selected' }}>3</option>
                                            <option value="4" {{ item.qty == 4 ? 'selected' }}>4</option>
                                            <option value="5" {{ item.qty == 5 ? 'selected' }}>5</option>
                                            <option value="6" {{ item.qty == 6 ? 'selected' }}>6</option>
                                            <option value="7" {{ item.qty == 7 ? 'selected' }}>7</option>
                                            <option value="8" {{ item.qty == 8 ? 'selected' }}>8</option>
                                        {% else %}
                                            <option value="0">0</option>
                                        {% endif %}
                                    </select>

                                    <div class="absolute right-0 top-0">
                                        {% if item.qty %}
                                            <button sprig s-val:prod1="0" type="button" class="-m-2 inline-flex p-2 text-gray-500 hover:text-gray-600">
                                                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
                                                </svg>
                                            </button>
                                        {% else %}
                                            <button sprig s-val:prod1="1" type="button" class="-m-2 inline-flex p-2 text-gray-500 hover:text-gray-600">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"/>
                                                </svg>
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {% if item.qty %}
                                <p class="mt-4 flex space-x-2 text-md text-gray-700">
                                    <svg class="h-5 w-5 flex-shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd"/>
                                    </svg>
                                    <span>In stock</span>
                                </p>
                            {% else %}
                                <p class="mt-4 flex space-x-2 text-md text-red-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                        <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd"/>
                                    </svg>
                                    <span>Removed from cart</span>
                                </p>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            {% else %}
                <li class="flex p-4">
                    No products in the cart
                </li>
            {% endif %}
        </ul>
    </section>
</div>
