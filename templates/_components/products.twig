{% set productIds = craft.products.ids() %}

<div>
    <div class="flex justify-center mb-4">
        <select class="form-select mr-3 rounded-md border border-gray-300 text-left text-base font-medium leading-5 text-gray-700 shadow-sm focus:border-sky-600 focus:outline-none focus:ring-1 focus:ring-sky-600 sm:text-md">
            <option>All products</option>
            <option>Only cool products</option>
        </select>
        <button sprig class="rounded-md border border-transparent bg-sky-700 px-4 py-3 text-base font-medium text-white shadow-sm hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-600 focus:ring-offset-2 focus:ring-offset-gray-50">
            Apply Filters
        </button>
    </div>

    <section aria-labelledby="cart-heading" class="lg:col-span-7">
        <h2 id="cart-heading" class="sr-only">Items in your shopping cart</h2>
        <ul role="list" class="space-y-4">
            {% if productIds|length %}
                {% for productId in productIds %}
                    {{ sprig('_components/product.twig', { productId: productId, oob: oob ?? false }) }}
                {% endfor %}
            {% else %}
                <li class="flex p-4">
                    No products found
                </li>
            {% endif %}
        </ul>
    </section>
</div>
